{
  "name": "@mono/toolbox",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "dev/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --env-file=./dev-ops/.env.development run dev/scripts/dev.ts",

    "build": "bun --env-file=./dev-ops/.env run --filter=./packages/app build",
    "build:prod": "bun run build",
    "build:dev": "bun --env-file=./dev-ops/.env.development run --filter=./packages/app build",

    "test": "bun run --parallel test --scope=packages/*",
    "clean": "bun run dev/scripts/clean.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5"
  },
  "dependencies": {
    "@mono/framework": "workspace:*",
    "@mono/btt": "workspace:*"
  }
}
